{
	"name": "melancholy",
	"version": "1.0.8",
	"author": "Jian.Lu",
	"description": "Rest API Debug Tool",
	"dependencies": {
		"@electron/remote": "^2.0.1",
		"electron-is-dev": "^2.0.0",
		"electron-localshortcut": "^3.2.1",
		"electron-log": "^4.4.1",
		"electron-store": "^8.0.0",
		"nedb": "^1.8.0",
		"uuid": "^8.3.2"
	},
	"main": "main.js",
	"build": {
		"appId": "com.jian.lu",
		"copyright": "Lujian Copyright Â© 2021",
		"productName": "Melancholy",
		"files": [
			"build/",
			"./main.js",
			"preload.js",
			"!build/static/js/*.js.map",
			"!build/static/css/*.css.map",
			"!build/static/js/*.LICENSE.txt",
			"!build/static/css/*.LICENSE.txt",
			"!build/*.LICENSE.txt"
		],
		"win": {
			"target": [
				"nsis",
				"zip",
				"nsis-web"
			]
		},
		"publish": [
			{
				"provider": "generic",
				"url": "http://10.60.131.105:8888/download"
			}
		],
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"uninstallerIcon": "build/assets/uninstaller.ico",
			"include": "../scripts/installer.nsh"
		}
	},
	"scripts": {
		"start": "electron .",
		"build": "electron-builder --win --x64",
		"buildmac": "electron-builder --mac"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"devDependencies": {
		"electron": "^14.0.0",
		"electron-builder": "^22.14.5",
		"electron-debug": "^3.2.0",
		"electron-devtools-installer": "^3.2.0"
	}
}
